{
  "context": {
    "timeZoneId": "America/Los_Angeles",
    "now": "2026-02-08T12:00:00-08:00[America/Los_Angeles]",
    "businessCalendar": "Mon-Fri no holidays unless stated"
  },
  "tests": [
    {
      "expr": "now + 1d",
      "type": "ZonedDateTime",
      "expected": "2026-02-09T12:00:00-08:00[America/Los_Angeles]"
    },
    {
      "expr": "2026-02-08 + 15 days",
      "type": "PlainDate",
      "expected": "2026-02-23"
    },
    {
      "expr": "start of day",
      "type": "ZonedDateTime",
      "expected": "2026-02-08T00:00:00-08:00[America/Los_Angeles]"
    },
    {
      "expr": "start of day 2026-02-06",
      "type": "ZonedDateTime",
      "expected": "2026-02-06T00:00:00-08:00[America/Los_Angeles]"
    },
    {
      "expr": "2026-02-08 + 10 business days",
      "type": "PlainDate",
      "expected": "2026-02-20"
    },
    {
      "expr": "business days between 2026-02-08 and 2026-02-23",
      "type": "Number",
      "expected": 10
    },
    {
      "expr": "now in America/New_York",
      "type": "ZonedDateTime",
      "expected": "2026-02-08T15:00:00-05:00[America/New_York]"
    },
    {
      "expr": "now as date",
      "type": "String",
      "expected": "2026-02-08"
    },
    {
      "expr": "02/08/2026 + 1d",
      "type": "ParseError",
      "expectedCode": "E_PARSE_INVALID_DATE_LITERAL"
    }
  ]
}